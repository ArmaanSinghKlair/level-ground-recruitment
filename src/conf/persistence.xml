<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="level-ground-recruitmentPU(Local)" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>problemdomain.Advisor</class>
    <class>problemdomain.Application</class>
    <class>problemdomain.BusinessClient</class>
    <class>problemdomain.Candidate</class>
    <class>problemdomain.CandidateRole</class>
    <class>problemdomain.CandidateSkill</class>
    <class>problemdomain.Education</class>
    <class>problemdomain.JobPosting</class>
    <class>problemdomain.Log</class>
    <class>problemdomain.Role</class>
    <class>problemdomain.Skill</class>
    <class>problemdomain.WorkHistory</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/lgrdb?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="password"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
